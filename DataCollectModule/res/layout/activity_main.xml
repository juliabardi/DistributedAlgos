<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableLayout
            android:padding="2dp"
            android:stretchColumns="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Szerver címek"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingBottom="10dp" />
            </TableRow>
            
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DistributedAlgos szerver:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText android:id="@+id/nodeAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GCM szerver:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>
            
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

               <EditText android:id="@+id/gcmAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </TableRow>
        </TableLayout>
            
        <TableLayout
            android:padding="2dp"
            android:stretchColumns="1" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adatgyűjtő szerver:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                
                <EditText android:id="@+id/dataCollectProtocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https"/>
            </TableRow>
          </TableLayout>
            
          <TableLayout
            android:padding="2dp"
            android:stretchColumns="1" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

               <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eszköz IP címe:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </TableRow>
            
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText android:id="@+id/deviceIP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

            </TableRow>
            
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adatgyűjtő szolgáltatás"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingTop="10dp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ToggleButton
                    android:id="@+id/buttonStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="stopClicked"
                    android:checked="true"
                    />

            </TableRow>
            
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kommunikációs szolgáltatás"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingTop="10dp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ToggleButton
                    android:id="@+id/buttonCommunicationStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="stopClicked"
                    android:checked="true"/>
            </TableRow>
            
            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                
                <Button
                    android:id="@+id/buttonCommunicationDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="communicationDetailsClicked"
                    android:text="Szinkronizáció állapota" />
            </TableRow>
        </TableLayout>
    </TableLayout>

</ScrollView>