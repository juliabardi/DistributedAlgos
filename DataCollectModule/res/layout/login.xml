<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <TextView
        android:text="Belépés"
        style="@style/title" />

     <EditText
         android:id="@+id/editTextEMail"
         android:ems="10"
         android:hint="Azonosító"
         style="@style/userEditText" >

         <requestFocus />
     </EditText>

     <EditText
         android:id="@+id/editTextPassword"
         android:ems="10"
         android:inputType="textPassword"
         android:hint="Jelszó"
         style="@style/userEditText" />
     
     <Button
         android:layout_width="130dp"
         android:layout_height="wrap_content"
         android:layout_marginBottom="10dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="5dp"
         android:onClick="onLogin"
         android:text="Belépés" />
     <TextView
        android:text="Még nem regisztráltál?"
        style="@style/title" />
     <Button
         android:layout_width="130dp"
         android:layout_height="wrap_content"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="5dp"
         android:onClick="onRegistration"
         android:text="Regisztráció" />
     
     <TextView
        android:text="Szerver beállítások"
        style="@style/title" />
     
            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:onClick="navigateToServerData"
            android:text="Szerverbeállítások megtekintése" />
     
     
</LinearLayout>